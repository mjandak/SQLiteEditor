<Application x:Class="SQLEditor.App"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SQLEditor"
			 Startup="Application_Startup" ShutdownMode="OnMainWindowClose" Exit="Application_Exit" DispatcherUnhandledException="Application_DispatcherUnhandledException">
	<Application.Resources>
        <local:NullVisibilityConverter x:Key="NullVisibilityConverter" />
        <local:BoolVisibilityConverter x:Key="BoolVisibilityConverter" />
        <Style x:Key="WindowStyle" TargetType="{x:Type Window}">
			<Setter Property="FontFamily" Value="Verdana" />
		</Style>
	</Application.Resources>
</Application>
